{
  // See https://medium.com/@dan_abramov/lint-like-it-s-2015-6987d44c5b48
  "parser": "babel-eslint",
  "env": {
    "node": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "strict": 0,
    "quotes": [2, "single"],
    "eol-last": [0],
    "new-cap": 0,
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "capIsNew": [0]
  },
  "plugins": [
    "babel"
  ]
}